    "categories": [
        "productivity",
        "business",
        "portfolio",
        "developer"
    ],
    
    "prefer_related_applications": false,
    
    "capture_links": "existing-client-navigate",
    
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    
    "edge_side_panel": {
        "preferred_width": 400
    },
    
    "handle_links": "preferred",
    
    "protocol_handlers": [
        {
            "protocol": "mailto",
            "url": "/#contact?mailto=%s"
        }
    ],
    
    "share_target": {
        "action": "/#contact",
        "method": "GET",
        "params": {
            "title": "subject",
            "text": "message"
        }
    },
    
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "image/*": [".png", ".jpg", ".jpeg", ".gif", ".webp"],
                "text/plain": [".txt"],
                "application/json": [".json"]
            }
        }
    ],
    
    "display_override": ["window-controls-overlay", "minimal-ui", "standalone"],
    
    "scope_extensions": [
        {"origin": "*.shadowkrr.github.io"}
    ]
